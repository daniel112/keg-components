{
  "name": "keg-components",
  "version": "0.1.0",
  "private": true,
  "main": "build",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.6.3",
    "@rollup/plugin-alias": "2.2.0",
    "babel-jest": "24.9.0",
    "jest": "24.7.1",
    "jsutils": "git+https://github.com/lancetipton/jsutils.git",
    "re-theme": "git+https://github.com/simpleviewinc/sv-re-theme.git",
    "react": "^16.12.0",
    "react-native": "^0.61.5",
    "react-native-web": "^0.12.0-rc.1",
    "react-dom": "^16.12.0",
    "rollup": "1.20.3",
    "rollup-jest": "0.0.2",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-cleanup": "3.1.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-terser": "5.1.2"
  },
  "peerDependencies": {
    "jsutils": "git+https://github.com/lancetipton/jsutils.git",
    "react": "^16.12.0",
    "re-theme": "git+https://github.com/simpleviewinc/sv-re-theme.git"
  },
  "optionalDependencies": {
    "react-dom": "^16.12.0",
    "react-native": "^0.61.5",
    "react-native-web": "^0.12.0-rc.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "rollup-jest",
    "moduleNameMapper": {
      "KegComponents": "<rootDir>/src/components",
      "KegType": "<rootDir>/src/components/typeface",
      "KegLayout": "<rootDir>/src/components/layout",
      "KegButton": "<rootDir>/src/components/button/button.${platform}.js",
      "KegImg": "<rootDir>/src/components/image/image.${platform}.js",
      "KegLink": "<rootDir>/src/components/typeface/link.${platform}.js",
      "KegText": "<rootDir>/src/components/typeface/text.${platform}.js",
      "KegView": "src/components/view/view.${platform}.js"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/index.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "es6"
    ],
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  }
}
