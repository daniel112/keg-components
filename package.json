{
  "name": "keg-components",
  "version": "0.1.0",
  "private": true,
  "main": "build/index.web.js",
  "scripts": {
    "start": "yarn dev",
    "dev": "rollup -c rollup.config.js -w",
    "build": "rollup -c rollup.config.js",
    "test": "NODE_ENV=test jest --no-cache --verbose",
    "storybook": "PLATFORM=web start-storybook",
    "sb": "PLATFORM=web start-storybook",
    "sb:web": "PLATFORM=web start-storybook",
    "sb:native": "PLATFORM=native start-storybook"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.6.3",
    "@rollup/plugin-alias": "2.2.0",
    "@rollup/plugin-json": "^4.0.1",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addon-storysource": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "babel-jest": "24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "3.1.3",
    "babel-plugin-react-native-web": "^0.11.5",
    "babel-preset-react-native": "^4.0.1",
    "jest": "24.7.1",
    "jsutils": "git+https://github.com/lancetipton/jsutils.git",
    "re-theme": "git+https://github.com/simpleviewinc/sv-re-theme.git",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-native": "^0.61.5",
    "react-native-web": "^0.12.0-rc.1",
    "react-scripts": "^3.3.0",
    "rollup": "1.20.3",
    "rollup-jest": "0.0.2",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-cleanup": "3.1.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-terser": "5.1.2"
  },
  "peerDependencies": {
    "jsutils": "git+https://github.com/lancetipton/jsutils.git",
    "re-theme": "git+https://github.com/simpleviewinc/sv-re-theme.git",
    "react": "^16.12.0"
  },
  "optionalDependencies": {
    "react-dom": "^16.12.0",
    "react-native": "^0.61.5",
    "react-native-web": "^0.12.0-rc.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "rollup-jest",
    "moduleNameMapper": {
      "KegForm": "<rootDir>/src/components/form/web",
      "KegInput": "<rootDir>/src/components/form/input/input.web.js",
      "KegButton": "<rootDir>/src/components/button/button.web.js",
      "KegImg": "<rootDir>/src/components/image/image.web.js",
      "KegLink": "<rootDir>/src/components/typeface/link.web.js",
      "KegText": "<rootDir>/src/components/typeface/text.web.js",
      "KegView": "src/components/view/view.web.js"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/index.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "es6"
    ],
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  }
}
